        <TextBlock Text="WPF" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Top" 
           Margin="0,110,0,0"
           FontFamily="Press Start 2P"
           FontSize="36"
           Foreground="MediumPurple"/>

        <TextBlock Text="01/01/1999" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Top" 
           Margin="0,170,0,0"
           FontFamily="Press Start 2P"
           FontSize="20" 
           Foreground="White"/>


        <Button Content="Mañana" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" 
            Margin="0,0,0,40"  
            Width="180" 
